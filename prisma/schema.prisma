

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role Roles @relation(fields: [role_type], references: [type])
  role_type String
  instansi Instansi?
}

model Instansi{
  id Int @id @default(autoincrement())
  name String
  user Users @relation(fields: [user_id], references: [id])
  user_id Int @unique
  permohonan Permohonan[]
}

model Permohonan{
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  file File[]
  type Types @relation(fields: [type_id], references: [id])
  pemohon Instansi @relation(fields: [pemohon_id], references: [id])
  status Status @relation(fields: [status_id], references: [id])
  type_id Int
  pemohon_id Int
  status_id Int
}

model File{
  id Int @id @default(autoincrement())
  url String
  permohonan Permohonan @relation(fields: [permohonan_id], references: [id])
  permohonan_id Int
}

model Types{
  id Int @id @default(autoincrement())
  name String
  permohonan Permohonan[]
}

model Status{
  id Int @id @default(autoincrement())
  type String @unique
  permohonan Permohonan[]
}

model Berita_acara{
  id Int @id @default(autoincrement())
  title String
  date DateTime @default(now())
  file_url String
}

model Roles{
  id Int @id @default(autoincrement())
  type String @unique
  user Users[]
}