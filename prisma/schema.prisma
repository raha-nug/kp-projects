generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model DesaBlankspot{
  id Int @default(autoincrement()) @id
  name String
  email String
  phone_number String
  kecamatan String
  kelurahan String
  location_name String
  location_address String
  latitude String
  longitude String
  location_code String
  operational String
  electric_resources String
  electric_capacity String
  id_pelanggan String
  signal_available String
  operator String
  signal_power String
  signal_needed String
  sector_category String
  priority String
  location_image String
}


model Instansi{
  id Int @default(autoincrement()) @id
  name String
  kecamatan String?
  type String
  apps UsedApps[]
  admin_name String
  admin_phone_number String
}

model UsedApps{
  id Int @default(autoincrement()) @id
  app_name String
  status String
  used_since DateTime
  app_dev String
  app_url String
  instansi Instansi @relation(fields: [instansi_id], references: [id])
  instansi_id Int
}