<h3 class="mt-5 mb-3">
  <b>Data Aplikasi yang digunakan oleh <%=type%></b>
</h3>
<div class="card">
  <div class="card-header">
    <a href="/ip/instansi-app/<%=type%>/add" class="btn btn-success">
      <i class="bi bi-plus"></i>
      Tambah Data
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover datatable">
        <thead>
          <tr>
            <th>No</th>
            <th>Desa</th>
            <% if(type === 'desa'){ %>
            <th>Kecamatan</th>
            <% } %>
            <th>Jumlah Aplikasi</th>
            <th>Nama admin</th>
            <th>No. Hp</th>
            <th>Aplikasi</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((instansi, index)=>{ %>
          <tr>
            <td><%=index + 1 %></td>
            <td><%=instansi.instansi_name %></td>
            <% if(type === 'desa'){ %>
            <td><%=instansi.kecamatan %></td>
            <% } %>
            <td><%=instansi.total_apps %></td>
            <td><%=instansi.admin_name%></td>
            <td><%=instansi.admin_phone_number%></td>
            <td>
              <button
                type="button"
                class="btn btn-success"
                data-bs-toggle="modal"
                data-bs-target="#exampleModal"
                data-apps="<%= JSON.stringify(instansi.apps) %>">
                Detail
              </button>
            </td>
            <td>
              <!-- button -->
              <div class="d-flex gap-1">
                <a class="btn btn-warning" href="/form-aplikasi">
                  <i class="bi bi-pencil-square"></i>
                </a>
                <button
                  class="btn btn-danger deleteApp"
                  data-id="<%=instansi.instansi_id%>">
                  <i class="bi bi-trash"></i>
                </button>
              </div>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">
          <b>Aplikasi</b>
        </h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>
      <div class="modal-body py-3"></div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".deleteApp").forEach((button) => {
      button.addEventListener("click", function (e) {
        e.preventDefault(); // Mencegah aksi default (misalnya navigasi)

        const instansiId = this.getAttribute("data-id");

        Swal.fire({
          title: "Anda yakin ingin menghapus?",
          text: "Data yang dihapus tidak dapat dikembalikan!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Ya, hapus!",
          cancelButtonText: "Batal",
        }).then((result) => {
          if (result.isConfirmed) {
            fetch(`/ip/instansi-app/${instansiId}/delete`, {
              method: "DELETE",
            })
              .then((res) => {
                if (!res.ok) {
                  throw new Error("Network response was not ok");
                }
                return res.json();
              })
              .then((data) => {
                Swal.fire({
                  title: "Terhapus!",
                  text: data.message,
                  icon: "success",
                }).then(() => {
                  // refresh halaman setelah penghapusan berhasil
                  window.location.reload();
                });
              })
              .catch((error) => {
                console.error("Error:", error);
                Swal.fire(
                  "Gagal!",
                  "Terjadi kesalahan saat menghapus data.",
                  "error"
                );
              });
          }
        });
      });
    });
  });
</script>

<script>
  // Mendapatkan referensi modal
  const exampleModal = document.getElementById("exampleModal");

  // Event listener ketika modal akan dibuka
  exampleModal.addEventListener("show.bs.modal", function (event) {
    // Tombol yang diklik
    const button = event.relatedTarget;

    // Mengambil data-apps dari tombol yang diklik
    const appsData = JSON.parse(button.getAttribute("data-apps"));

    // Mendapatkan elemen di dalam modal yang akan diisi
    const modalBody = exampleModal.querySelector(".modal-body");

    // Mengosongkan modalBody sebelum mengisinya
    modalBody.innerHTML = "";

    // Memasukkan data apps ke dalam modal
    if (appsData.length > 0) {
      modalBody.innerHTML = `
    <div class="table-responsive">
      <table class="table datatable">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Aplikasi</th>
            <th>Status Aplikasi</th>
            <th>Digunakan Sejak</th>
            <th>Pengembang</th>
            <th>URL Aplikasi</th>
          </tr>
        </thead>
        <tbody class="table-striped">
          ${appsData
            .map(
              (app, index) => `
            <tr>
              <td>${index + 1}</td>
              <td>${app.app_name}</td>
              <td>${app.status}</td>
              <td>${new Date(app.used_since).toLocaleDateString()}</td>
              <td>${app.app_dev}</td>
              <td><a href="${app.app_url}" target="_blank">${
                app.app_url
              }</a></td>
            </tr>
          `
            )
            .join("")}
        </tbody>
      </table>
    </div>
  `;
    } else {
      modalBody.innerHTML = "<p>Tidak ada aplikasi yang terkait.</p>";
    }
  });
</script>
